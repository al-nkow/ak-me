@import '../../styles/config.styl'

.intro
	margin-top -95px
	text-align center
	
.name
	font-family MissionScript
	font-size 91px
	color #ffffff
	text-shadow 0 1px 2px rgba(0,0,0,.7)
	margin-bottom 20px
	
.specialty
	font-size 26px
	font-family HelveticaNeueLight, Helvetica, sans-serif
	color #ffffff
	text-align center
	text-transform uppercase
	text-shadow 0 1px 2px rgba(0,0,0,.7)
	margin-bottom 20px
	
.main-but
	.md-button
		// border 2px solid #ffffff
		border 2px solid $darkred
		background $red
		color #ffffff
		padding 7px 30px
		font-family HelveticaNeueRoman, Helvetica, sans-serif
		font-size 20px
		text-shadow 0 1px 2px rgba(0,0,0,.7)	
		box-shadow 0 3px 5px -1px rgba(0,0,0,.2),0 6px 10px 0 rgba(0,0,0,.14),0 1px 18px 0 rgba(0,0,0,.12)
		position relative
		top 0
		transition all 0.1s linear
		&:hover
			background #bf505b
			position relative
			top -2px
			box-shadow 0 6px 6px -3px rgba(0,0,0,.2),0 10px 14px 1px rgba(0,0,0,.14),0 4px 18px 3px rgba(0,0,0,.12)
	
.logo
	width 70px
	height 70px
	fill #ffffff
	
.logo-wrap
	position relative
	display inline-block
	z-index 1
	margin-bottom 17px
	
.logo-shadow
	width 72px
	height 72px
	fill #000000
	position absolute
	left 50%
	top 50%
	transform translate(-50%,-50%)
	z-index -1
	margin-bottom -2px
	opacity 0.3
