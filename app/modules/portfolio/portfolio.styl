.float-block
    float left
    width 50%
    box-sizing border-box
    min-height 200px
    padding 30px

.portfolio
    margin -10px
    &__item
        cursor pointer
        position relative
        overflow hidden
        // border-radius 4px
        background #000000
        width 100%
        &__img
            display block
            width 100%
        &__desc
            z-index 1
            position absolute
            bottom 0
            left 0
            right 0
            background rgba(0,0,0,0.4)
            padding 10px 20px
        &:hover
            .dimmer
                opacity 0.3
            .eye
                opacity 0.4
                &:hover
                    opacity 0.5

.dimmer
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    background #000000
    z-index 2
    transition all 0.3s ease-out
    opacity 0

.eye
    transition opacity 0.3s ease-out
    position absolute
    top 50%
    left 50%
    width 70px
    height 70px
    transform translate(-50%,-50%)
    fill #ffffff
    opacity 0
    margin-top -20px
    z-index 3

.sota
    padding-left 10px
    &__logo
        width 80px
        img
            max-width 100%
            display block
    &__title
        color #ffffff
        &__head
            font-size 30px
            line-height 32px
            margin-bottom 3px
            text-transform uppercase
            font-family OpenSansRegular, Arial, sans-serif
        &__small
            font-size 14px
            font-family HelveticaNeuelight, Arial, sans-serif


