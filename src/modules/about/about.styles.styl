@import '../../style/config.styl'

.job-block
    margin-bottom 20px
    &__name
        font-size 20px

.about-main
    font-size 18px
    line-height 28px
    font-family HelveticaNeueLight, Helvetica, sans-serif
    &__image
        width 100%
        border-radius 2px
        @media screen and (max-width: 960px)
            max-width: 400px
    &__info
        padding 20px
        &__head
            margin-bottom 20px
        &__buttons
            margin-bottom 60px
        @media screen and (max-width: 959px)
            padding: 20px 0

.soc-icon-wrap
    display inline-block
    vertical-align middle
    margin 5px

.soc-icon
    display block
    width 34px
    height 34px
    cursor pointer
    border-radius 50%
    // fill #4D76A1
    fill #305b77
    transition all 0.2s ease-out
    &:hover
        fill #3f648a

.about-photo-container
    width: 50%
    @media screen and (max-width: 1100px)
        width: 40%
    @media screen and (max-width: 960px)
        width: 100%

