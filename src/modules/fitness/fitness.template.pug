.bg-blur
    .state-wrap
        span.back-but(icon-down ui-sref="root.portfolio")
        div(ng-if="vc.showbut")
            span.arr-down(icon-down)

        div.work__header

            div(layout="column" layout-gt-xs="row")
                div(flex="55")
                    .page-name.page-name_nom Fitness
                    a.project-link.project-link_dist(href="http://fitness.ak-me.ru/" target="_blank") www.fitness.ak-me.ru

                    img.mob-view-imac(src="/images/fitness_imac.png" alt="")

                    .text-block.text-block_right.text-block_bottom
                        .text-block__desc
                            | Responsive WordPress fitness theme designed and developed specially for gym and fitness trainer websites.

                    .text-block.text-block_right.text-block_bottom
                        .text-block__title When
                        .text-block__desc 2016

                    .text-block.text-block_right.text-block_bottom
                        .text-block__title Role
                        .text-block__desc Web developer / designer

                    .text-block.text-block_right.text-block_last
                        .text-block__title Technologies
                        .text-block__desc
                            div Javascript / PHP / Pug / Stylus / Gulp
                            div Wordpress

                    .devices.devices_large
                        .devices__item.devices__item_macbook
                            img(src="/images/fitness_macbook.png" alt="")
                        .devices__item.devices__item_ipad
                            img(src="/images/fitness_ipad.png" alt="")
                        .devices__item.devices__item_iphone
                            img(src="/images/fitness_iphone.png" alt="")

                div.hide-xs(flex="45")
                    .work__header__image
                        img(src="/images/fitness_imac.png" alt="")

            .devices.devices_landing
                .devices__item.devices__item_macbook
                    img(src="/images/fitness_macbook.png" alt="")
                .devices__item.devices__item_ipad
                    img(src="/images/fitness_ipad.png" alt="")
                .devices__item.devices__item_iphone
                    img(src="/images/fitness_iphone.png" alt="")

        div.screens-wrap
            img.large-img.md-whiteframe-3dp(ng-repeat="item in vc.screens track by $index" ng-src="{{ item }}")

        scroll-top