@import '../../style/config.styl'

.intro
    margin-top -95px
    text-align center
    width: 100%;
    @media screen and (max-width: 498px)
        padding: 0 10px

.name
    font-family MissionScript
    font-size 91px
    color #ffffff
    text-shadow 0 1px 2px rgba(0,0,0,.7)
    margin-bottom 20px
    @media screen and (max-width: 600px)
        font-size: 80px;
    @media screen and (max-width: 498px)
        font-size: 76px;
    @media only screen and (min-width: 1024px) and (max-height: 1366px) and (orientation: portrait) and (-webkit-min-device-pixel-ratio: 1.5)
        font-size: 96px;
    // iphone 5
    @media screen and (device-aspect-ratio: 40/71)
        font-size: 60px;


.specialty
    font-size 26px
    font-family HelveticaNeueLight, Helvetica, sans-serif
    color #ffffff
    text-align center
    text-transform uppercase
    text-shadow 0 1px 2px rgba(0,0,0,.7)
    margin-bottom 20px
    @media screen and (max-width: 768px)
        margin-bottom: 40px
    @media screen and (max-width: 600px)
        font-size: 22px;
    @media screen and (max-width: 498px)
        font-size: 18px;
    // iphone 5
    @media screen and (device-aspect-ratio: 40/71)
        font-size: 16px;

.main-but
    .md-button
    // border 2px solid #ffffff
        border 2px solid $darkred
        background $red
        color #ffffff
        padding 7px 30px
        font-family HelveticaNeueRoman, Helvetica, sans-serif
        font-size 20px
        text-shadow 0 1px 2px rgba(0,0,0,.7)
        box-shadow 0 3px 5px -1px rgba(0,0,0,.2),0 6px 10px 0 rgba(0,0,0,.14),0 1px 18px 0 rgba(0,0,0,.12)
        position relative
        top 0
        transition all 0.1s linear
        &:hover
            background #bf505b
            position relative
            top -2px
            box-shadow 0 6px 6px -3px rgba(0,0,0,.2),0 10px 14px 1px rgba(0,0,0,.14),0 4px 18px 3px rgba(0,0,0,.12)

.logo
    width 70px
    height 70px
    fill #ffffff
    @media screen and (device-aspect-ratio: 40/71)
        width: 50px
        height: 50px

.logo-wrap
    position relative
    display inline-block
    z-index 1
    margin-bottom 17px

.logo-shadow
    width 72px
    height 72px
    fill #000000
    position absolute
    left 50%
    top 50%
    transform translate(-50%,-50%)
    z-index -1
    margin-bottom -2px
    opacity 0.3
    @media screen and (device-aspect-ratio: 40/71)
        width: 52px
        height: 52px

.intro-block-wrap
    text-align: center
    display: flex;
    align-items: center;
    width: 50%
    @media screen and (max-width: 1160px)
        width: 60%;
    @media screen and (max-width: 980px)
        width: 100%;
    @media only screen and (min-width: 1024px) and (max-height: 1366px) and (orientation: portrait) and (-webkit-min-device-pixel-ratio: 1.5)
        width: 100%;

.intro-wrap
    display: flex;
    flex-direction: row;
    justify-content: flex-end;

