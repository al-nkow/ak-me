                        .text-block__desc
                            div Angular 4 / RxJS / Javascript / PUG / SCSS / Webpack
                            div Java / Jaxb / Spring / PostgreSQL

                div.hide-xs(flex="45")
                    .work__header__image
                        img(src="/images/utmc_imac.png" alt="")

            .devices
                .devices__item.devices__item_macbook
                    img(src="/images/utmc_macbook.png" alt="")
                .devices__item.devices__item_ipad
                    img(src="/images/utmc_ipad.png" alt="")
                .devices__item.devices__item_iphone
                    img(src="/images/utmc_iphone.png" alt="")

        div.screens-wrap
            div.screens.clearfix
                div.screens__item(
                ng-repeat="item in vc.screens track by $index"
                ng-click="vc.showScreen($event, $index)"
                )
                    img.screens__item__img.md-whiteframe-3dp(ng-src="{{ item }}")

        scroll-top