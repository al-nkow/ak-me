@import '/config.styl'

* 
	&:focus
		outline none
	// text-rendering optimizeLegibility
	// -webkit-font-smoothing antialiased
	// -moz-osx-font-smoothing grayscale

html, body
	height 100%
	
body

	font-smoothing antialiased
	-webkit-font-smoothing antialiased
	-moz-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
	
	position relative
	// background url('../images/bgpattern.png') repeat
	// font-family 'robotomedium', Helvetica, Arial
	font-family HelveticaNeueRoman, Helvetica, Arial
	overflow hidden
	color #ffffff
	@media screen and (max-width: 1024px)
		md-tooltip
			display none!important
		
	
.clearfix:after
	content "."
	visibility hidden
	display block
	height 0
	clear both
	opacity 0
	
.flex-in
	padding 10px
	
.main-wrap
	padding 20px
	box-sizing border-box
	position absolute
	top 0
	left 0
	right 0
	bottom 0
	overflow-x hidden
	overflow-y auto
	background-image url('/images/bgclear.jpg')
	background-size auto 100%
	//transition background-image 0.1s linear

	@media screen and (max-width: 768px)
		background-position: -182px center;
	@media screen and (max-width: 498px)
		background-position: -186px center;
	@media screen and (max-width: 498px)
		background-position: -178px center;
	/* Portrait iPadPRO */
	@media only screen and (min-width: 1024px) and (max-height: 1366px) and (orientation: portrait) and (-webkit-min-device-pixel-ratio: 1.5)
		background-position: -234px center;

	&_root
		background-image url('/images/bgmain.jpg')
	&_contacts
		background-image url('/images/contacts.jpg')
		background-size cover
		@media screen and (max-width: 1024px)
			background-position: -291px center;
		@media screen and (max-width: 768px)
			background-position: -224px center;
		@media screen and (max-width: 498px)
			background-position: -286px center;
		@media screen and (max-width: 414px)
			background-position: -266px center;
		@media screen and (max-width: 411px)
			background-position: -270px center;
		@media screen and (max-width: 375px)
			background-position: -334px center;
		@media screen and (max-width: 360px)
			background-position: -200px center;

		// iphone `6 7 8` portrait
		@media only screen and (min-device-width : 375px) and (max-device-width : 667px) and (orientation : portrait)
			background-position: -237px center
		// iphone `X` portrait
		@media only screen and (min-device-width : 375px) and (max-device-width : 812px) and (-webkit-device-pixel-ratio : 3) and (orientation : portrait)
			background-position: -332px center
		// Pixel 2 XL portrait
		@media screen and (device-width: 411px) and (device-height: 823px) and (orientation: portrait)
			background-position: -317px center;
		// iphone `6 7 8 plus` portrait
		@media only screen and (min-device-width : 414px) and (max-device-width : 736px) and (orientation : portrait)
			background-position: -272px center

.vignette
	position absolute
	top 0
	left 0
	right 0
	bottom 0
	overflow hidden
	background url('/images/vignette.png') repeat
	background-size 100% 100%
	
.full-height
	height 100%
	
.ov-auto
	overflow auto
	
input::-ms-clear
	display none
	

.head
	font-size 32px
	color #333333
	margin-bottom 40px

.text
	font-size 16px
	color #333333
	margin-bottom 20px
	font-family RobotoLight
	
.flex-in
	padding 10px
	color #ffffff
	font-size 28px
	
.state-wrap
	box-sizing border-box
	max-width 1290px
	margin 0 auto
	padding 45px
	min-height 100%
	@media screen and (max-width: 411px)
		padding: 20px
	
.content-wrap
	margin 0 -20px 0 -20px
	min-height 700px
	background rgba(0,0,0,0.4)
	padding 20px
	border-radius 2px
	h2
		color $light
		
.project-link
	font-size 18px
	display inline-block
	color $green
	text-decoration none
	font-family HelveticaNeueLight, Arila, sans-serif
	&_dist
		margin-bottom 20px
	&:hover
		text-decoration underline
	
.page-name
	font-size 38px
	color #ffffff
	font-family HelveticaNeueRoman, Arila, sans-serif
	text-transform uppercase
	text-shadow 0 1px 2px rgba(0,0,0,.7)
	margin-bottom 40px
	&_nom
		margin-bottom 5px
	
.i-but
	border 1px solid $darkgreen
	// border-radius 4px
	padding 0px 18px
	font-family HelveticaNeueMedium, Helvetica, sans-serif
	font-size 15px
	background $darkgreen
	&:hover
		background $lightgreen!important
	&__icon
		margin-right 10px
		width 22px
		height 22px
		fill #ffffff
		display inline-block
		vertical-align middle
		&_mail
			margin-top -2px
			
h2
	margin 0 0 20px 0
	font-family HelveticaNeueRoman, Helvetica, sans-serif
	font-weight normal
	font-size 28px
	text-transform uppercase
	
.bg-blur
	min-height 100%
	background rgba(8,42,65,0.75)
	&_light
		background rgba(8,42,65,0.1)
	
.devices
	&__item
		display inline-block
		margin-right 52px
		img
			height 144px
		&_ipad
			position relative
			top -2px
		&_macbook
			margin-left -30px
			margin-right 35px
			
.s-dialog
	max-height 90%
	&__close
		width 30px
		height 30px
		fill #ffffff
		cursor pointer
	&__image
		display block
		//max-width 100%
		max-width 900px
		max-height 604px
		&:hover
			cursor pointer
	&__head
		font-size 18px
		color #ffffff
		
	md-toolbar
		background #3f88b5
		
// md-tooltip.md-default-theme .md-content, 
md-tooltip
	.md-content
		background rgba(63, 136, 181, 0.8)
		font-size 16px
		padding 5px 10px
		
// md-menu-content.md-default-theme, 
md-menu-content
	background-color #255d7d
	md-menu-item
		color #ffffff
		// color #182e40
		
.text-block
	&_right
		padding-right 20px
	&_bottom
		margin-bottom 40px
	&_last
		margin-bottom 60px
	&__title
		font-family HelveticaNeueMedium, Helvetica, sans-serif
		font-size 20px
		text-transform uppercase
		color $green
		margin-bottom 5px
		&_dist
			margin-bottom 20px
	&__desc
		font normal 18px/28px HelveticaNeueLight, Helvetica, sans-serif
		&_dist
			margin-bottom 10px
			
md-toast
	&.success
		.md-toast-content
			color #52bd92
	&.alert
		.md-toast-content
			color #e05432

.large-img
	display: block
	margin 80px auto
	border-radius 4px
	max-width 800px
	width: 100%

.back-but
	cursor pointer
	transition opacity 0.2s linear
	position fixed
	top 44px
	left 26px
	width: 40px
	height: 40px
	fill #ffffff
	opacity 0.3
	transform rotate(90deg)
	&:hover
		opacity 0.5

